<div class="text-center">
  <h1>New User</h1><br>

<%= form_for(@user) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div><br>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div><br>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div><br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
