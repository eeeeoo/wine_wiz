<div class="container">
  <div class="row">
<div class="col-sm-2">
</div>
<div class="col-sm-10">
<%= form_for(@recommendation) do |f| %>
<div class="form-group">
<h3>Recommend a Pair!</h3>
</div>

<label>Wine</label>
<%= f.collection_select :wine_id, Wine.all, :id, :name, {class:"form-control"}%><br>
<label>Category</label>
<%= f.collection_select :category_id, Category.all, :id, :name %><br>
<%= f.label :comment %><br>
<%= f.text_area :comment %><br>
<%= f.submit "Submit Recommendation" %>
<% end %>
</div>
</div>

</div>
