<div class="container">
  <div class="row">
<div class="col-sm-2">
</div>
<div class="col-sm-10">
<%= form_for(@recommendation) do |f| %>
<div>
<h3>Edit your Pair!</h3><br>
</div>

<label>Wine</label>
<%= f.collection_select :wine_id, Wine.all, :id, :name, {class:"form-control"}%><br><br>
<label>Category</label>
<%= f.collection_select :category_id, Category.all, :id, :name %><br><br>
<%= f.label :comment %><br>
<%= f.text_area :comment %><br><br>
<%= f.submit "Edit Recommendation" %>
<% end %>
</div>
</div>

</div>
