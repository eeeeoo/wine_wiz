<!DOCTYPE html>
<html>
  <head>
    <title>Wine Wizard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Roboto:400,400i",  media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Wine Wiz</h1>
    <header>
      <% if @logged_in_user %>
        Logged in as: <%= @logged_in_user.name %>
        <%= link_to "Logout", logout_path, method: 'delete' %>
      <% else %>
        <%= link_to "Register", new_user_path %>
        <%= link_to "Login", new_session_path %>
      <% end %>
    </header><br>
    <%= yield %>
  </body>
</html>
